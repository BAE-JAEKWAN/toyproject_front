{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 'xxx' 모듈 또는 해당 형식 선언을 찾을 수 없습니다.
    "typeRoots": ["./@types", "./node_modules/@types"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
